#include<cstdio>
#include<cstring>
#include<iostream>
#include<algorithm>
#define MAXN 1<<30
using namespace std;
int f[6005*6],n,m;
int main(){
    #ifndef ONLINE_JUDGE
    freopen("prob.in","r",stdin);
    freopen("prob.out","w",stdout);
    #endif
    scanf("%d",&n);m=n*6;
//  memset(f,127,sizeof(f));f[0]=0;
    for(int i=1;i<=n;i++){
        int x,y,z;
        scanf("%d%d%d",&x,&y,&z);
        for(int j=m;j>=0;j--){
            int Min=MAXN;
            if(x&&j-x>=0) Min=min(f[j-x],Min);
            if(y) Min=min(f[j]+y,Min);
            if(z&&j-z>=0) Min=min(f[j-z]+z,Min);
            f[j]=Min;
        }
    }
    int Ans=MAXN;
    for(int i=0;i<=m;i++) Ans=min(Ans,max(f[i],i));
    printf("%d",Ans);
    return 0;
}
